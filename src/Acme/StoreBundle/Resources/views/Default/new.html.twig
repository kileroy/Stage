        <script src="{{ asset('bundles/Store/js/datepicker-fr-CA.js')}}"></script>
        <script src="datepicker-fr-CA.js"></script>
        <script>
            {#Pour les Réservation#}
        $("form input.date").datepicker({
            minDate: 0, 
            beforeShowDay: $.datepicker.noWeekends,
            showOn: "button",
            buttonImage: "images/calendar.gif",
            buttonImageOnly: true,
            buttonText: "Calendrier",
        }).attr("readonly","readonly"); 
            {#Pour les changement de lundi#}
        $("form input.lundi").datepicker({
            beforeShowDay: function(date) {
                var day = date.getDay();
                return [(day == 1 )];
            },
            showOn: "button",
            buttonImage: "images/calendar.gif",
            buttonImageOnly: true,
            buttonText: "Calendrier",
        }).attr("readonly","readonly"); 
        </script>
