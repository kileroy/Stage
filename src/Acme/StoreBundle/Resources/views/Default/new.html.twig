    {% endblock %}

{% block content %}
    <br>
    Veuillez remplir les champs demandés.<br>
    {% if err == "" %}<br>{% endif %}
    <strong><font color=darkred>{{err}}</font></strong>
    {% form_theme form 'AcmeStoreBundle:Form:fields.html.twig' %}
    {{ form(form) }}<br>
    {#<p>Date: <input type="text" id="datepicker"></p>#}
    
    {% block javascripts %}
        <script src="//code.jquery.com/jquery-1.10.2.js"></script>
